<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="EditNewestStocktakingActionGroup">
        <annotations>
            <description>Edit the newest stocktaking in the grid</description>
        </annotations>
        <amOnPage url="{{AdminStocktakingGridPage.url}}" stepKey="goToStocktakingGrid"/>
        <waitForPageLoad stepKey="waitForPageLoad"/>
        <click selector="{{AdminStocktakingGridSection.firstRow}}" stepKey="clickFirstRow"/>
    </actionGroup>
</actionGroups>
